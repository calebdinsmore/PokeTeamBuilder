<resources>

    <!-- Base application theme. -->

    <item name="pokeballRed" type="color">#CC1212</item>
    <item name="pokeballBlack" type="color">#222224</item>
    <item name="pokeballWhite" type="color">#f0f0f0</item>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Theme.TeamBuilder.ActionBar</item>
        <item name="actionBarStyle">@style/Theme.TeamBuilder.ActionBar</item>
    </style>

    <style name="Theme.TeamBuilder.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/pokeballBlack</item>
        <item name="background">@color/pokeballBlack</item>

        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="RedText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pokeballRed</item>
    </style>
    
    <style name="ActionBarTitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pokeballWhite</item>
    </style>

    <style name="RedTextTitle" parent="RedText">
        <item name="android:textSize">30sp</item>
    </style>

</resources>